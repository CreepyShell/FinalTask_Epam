{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "ForumDbDomainConnection": "Server=localhost\\SQLEXPRESS01;Database=ForumDomain;Trusted_Connection=True;MultipleActiveResultSets=true;",
    "UserManagerConnection": "Server=localhost\\SQLEXPRESS01;Database=Administration;Trusted_Connection=True;MultipleActiveResultSets=true;"
  },
  "JwtSection": {
    "JwtKey": "LoooooooooooonnnnnggggKeyyyyyyyyyyyyyyyyyyyy",
    "ExpirationMinutes": 5,
    "Issuer": "InternetForum.WebAPI",
    "Audience": "https://localhost:5001"
  },
  "RefreshTokenExpirationDays": 2,
  "Serilog": {
    "Using": [ ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Microsoft.AspNetCore.Authentication": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/LogFile_.txt",
          "rollingInterval": "Hour",
          "fileSizeLimitBytes": "409600",
          "retainedFileCountLimit": "21"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  }
}
